@model TodoList.Models.TodoItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Update Status</h1>


<h3>Are you sure you want to change the status of item: @Html.DisplayFor(model => model.Title)</h3> 

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateStatus">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
